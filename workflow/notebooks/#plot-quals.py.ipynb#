    "import pandas as pd\n",
    "import altair as alt\n",
    "from pysam import VariantFile\n",
    "\n",
    "quals = pd.DataFrame({\"qual\": [record.qual for record in VariantFile(snakemake.input[0])]})\n",
    "\n",
    "chart = alt.Chart(quals).mark_bar().encode(\n",
    "    alt.X(\"qual\", bin=True),\n",
    "    alt.Y(\"count()\")\n",
    ")\n",
    "\n",
    "chart.save(snakemake.output[0])"
   ]
